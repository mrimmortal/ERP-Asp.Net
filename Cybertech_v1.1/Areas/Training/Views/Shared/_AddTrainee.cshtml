
@model Cybertech_v1._1.Areas.Training.Models.Training_ActiveTraineesModel

@using (Ajax.BeginForm("AddTrainee", "Home", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "div-record", OnSuccess = "$('.close').click()" }))
{
    <div class="modal-body">
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>CSSL ID</b></span>
                    @Html.TextBoxFor(m => m.CSSL_ID, new { @class = "form-control", @placeholder = "CSSL ID", required = "required" ,@pattern="\\d*" ,maxlength="4"})
                    @*@Html.ValidationMessageFor(m => m.CSSL_ID)*@
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>CSSL Domain Name</b></span>
                    @Html.TextBoxFor(m => m.CSSL_Domain_User_Name, new {Value="CSSL\\", @class = "form-control", @placeholder = "CSSL\\Demo", required = "required" })
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Name</b></span>
                    @Html.TextBoxFor(m => m.Trainee_Name, new { @class = "form-control", @placeholder = "Name", required = "required" })
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Role</b></span>
                    @*@Html.TextBoxFor(m => m.Role, new { @class = "form-control", @placeholder = "Role Ex.(Trainee/Traineer)", required = "required" })*@
                <select class = "form-control" name="Role" id="Role" required>
                    <option value="">None</option>
                    <option value="Trainee">Trainee</option>
                    <option value="Trainer">Trainer</option>
                </select>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Supervisor</b></span>
                    @Html.TextBoxFor(m => m.Supervisor, new {Value = "Karishma Khoja" , @class = "form-control", @placeholder = "Supervisor", required = "required" , @readonly = "readonly" })
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Type</b></span>
                    @*@Html.TextBoxFor(m => m.Type, new { @class = "form-control", @placeholder = "Type", required = "required" })*@
                    <select class="form-control" name="Type" id="Type" required>
                        <option value="">None</option>
                        <option value="Trainee">Trainee</option>
                        <option value="Trainer">Trainer</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Technology</b></span>
                    @Html.TextBoxFor(m => m.Technology, new { @class = "form-control", @placeholder = "Technology", required = "required" })
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>DOJ</b></span>
                    @*@Html.TextBoxFor(m => m.DOJ, new {@class = "form-control", @placeholder = "DOJ", required = "required" })*@
                <input id="DOJ" name="DOJ" type="date"  class="form-control" placeholder="Date of Joining" required />
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Team</b></span>
                    @Html.TextBoxFor(m => m.Team, new { Value = "Training", @class = "form-control", @placeholder = "Team", required = "required", @readonly = "readonly" })
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Active / Deactivate</b></span>
                    @Html.TextBoxFor(m => m.Active, new { @class = "form-control", @placeholder = "Active / Deactive", required = "required" })
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Shift Timing</b></span>
                    @*@Html.(m => m.Shift_Time, new { @class = "form-control", @placeholder = "Shift Time",  })*@
                    <input id="Shift_Time" name="Shift_Time" type="time" class=" form-control" placeholder="Shift Timing" required />
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;Close</button>
        <button type="submit" class="btn btn-primary" name="cmd"><i class="fa fa-check"></i>&nbsp;Save</button>
    </div>
}